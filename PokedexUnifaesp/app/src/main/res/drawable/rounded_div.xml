<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:height="50dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="#8898A8"/>
            <corners android:topRightRadius="10dp"></corners>
            <stroke
                android:width="1dp"
                android:color="#3E4140" />

        </shape>
    </item>
    <item android:top="45dp" android:height="50dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="#eee"/>
            <corners android:bottomRightRadius="10dp"></corners>
            <stroke
                android:width="1dp"
                android:color="#3E4140" />

        </shape>
    </item>
</layer-list>